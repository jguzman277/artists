<%= form_with(model: artist) do |form| %>
  <% if artist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(artist.errors.count, "error") %> prohibited this artist from being saved:</h2>

      <ul>
      <% artist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :artist, class: 'form-label' %>
      <%= form.text_field :artist, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :genre_id, class: 'form-label' %>
    <%= form.select :genre_ids, Genre.pluck(:music_genre, :id), {}, {multiple: true, data: {controller: 'slim'}} %>
  </div> 

  <div class="mb-3">
    <%= form.label :website, class: 'form-label' %>
      <%= form.text_field :website, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :phone_number, class: 'form-label' %>
      <%= form.text_field :phone_number, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :email_address, class: 'form-label' %>
      <%= form.text_field :email_address, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :city, class: 'form-label' %>
      <%= form.text_field :city, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :zip_code, class: 'form-label' %>
      <%= form.text_field :zip_code, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <% if artist.persisted? %>
      <div class="float-end">
        <%= link_to 'Destroy', artist, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if artist.persisted? %>
      <%= link_to "Cancel", artist, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", artists_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
